// Se incluye la libreria MentorBitUltrasonidos
#include <MentorBitUltrasonidos.h>

// Se definen los pines a los que esta conectado el modulo de ultrasonidos
#define PIN_ECHO A4
#define PIN_TRIGGER 24

// Se crea el objeto potenciometro
MentorBitUltrasonidos HC_SR04(PIN_TRIGGER, PIN_ECHO);

void setup(){
    Serial.begin(9600);
}

void loop(){

    Serial.println("Distancia frontal: " + String(HC_SR04.obtenerDistancia()));
    delay(1000);
}